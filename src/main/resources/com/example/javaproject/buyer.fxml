<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600" prefWidth="700" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.javaproject.BuyerController">
   <center>
      <TabPane>
         <!-- Zakładka: Przeglądaj Aukcje -->
         <Tab text="Przeglądaj Aukcje">
            <VBox spacing="20" style="-fx-padding: 20;">
               <TableView fx:id="table">
                  <columns>
                     <TableColumn fx:id="titleColumn" prefWidth="340.0" text="Tytuł" />
                     <TableColumn fx:id="priceColumn" prefWidth="100.0" text="Aktualna Cena" />
                     <TableColumn fx:id="timeColumn" prefWidth="100.0" text="Czas do końca" />
                     <TableColumn fx:id="licitatorsNumberColumn" prefWidth="100.0" text="Wygrywa" />
                  </columns>
               </TableView>
               <HBox alignment="CENTER" spacing="20">
                  <Label prefHeight="18.0" prefWidth="41.0" text="Saldo" />
                  <TextField fx:id="accountStatus" editable="false" prefHeight="26.0" prefWidth="63.0">
                     <HBox.margin>
                        <Insets left="-30.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField fx:id="OfferedAmountTextField" onAction="#onOfferedAmountTextField" prefWidth="200" promptText="Kwota licytacji" />
                  <Button fx:id="OfferButtonClick" onAction="#onOfferButtonClick" prefWidth="100" text="Licytuj" />
               </HBox>
            </VBox>
         </Tab>
      </TabPane>
   </center>
   <top>
      <VBox prefHeight="45.0" prefWidth="660.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="TOP_RIGHT" prefHeight="18.0" prefWidth="326.0" />
            <Label alignment="CENTER" contentDisplay="RIGHT" prefHeight="18.0" prefWidth="121.0" text="Użytkownik">
               <VBox.margin>
                  <Insets bottom="5.0" left="-35.0" right="10.0" />
               </VBox.margin>
               <padding>
                  <Insets left="30.0" right="10.0" />
               </padding>
            </Label>
            <SplitMenuButton fx:id="currentUserTextBox" alignment="CENTER" contentDisplay="RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" popupSide="RIGHT" prefHeight="30.0" prefWidth="200.0">
               <items>
               </items>
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
            </SplitMenuButton>
         </children>
      </VBox>
   </top>
</BorderPane>
